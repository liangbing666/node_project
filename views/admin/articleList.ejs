<% include ./header %>
    <!-- 路径导航 -->
    <ol class="breadcrumb">
        <li>
            <a href="#">文章管理</a>
        </li>
        <li class="active">文章列表</li>
    </ol>
    <!-- 路径导航 END -->

	<div class="article_sty">
    <table class="table table-hover articleList">
        <tr>
            <td>封面</td>
            <td>文章标题</td>
            <td>分类</td>
            <td>发布时间</td>
            <td>作者</td>
            <td>操作</td>
        </tr>
        <% articlelist.forEach(function(val){ %>
            <tr class="article_content">
                <td class="con_first">
                    <img src="/<%=val.imgurl%>" alt="">
                </td>
                <td>
                    <%=val.title%>
                </td>
                <td>
                    <%=val.itemId.name%>
                </td>
                <td>
                    <%=val.ctime.toLocaleString()%>
                </td>
                <td>
                    <%=val.author%>
                </td>
                <td>
                    <a href="/admin/articleEdit/<%=val._id%>">编辑</a>
                    |
                    <a href="/admin/articleRemove/<%=val._id%>" onclick="return confirm('您确定要删除吗？')">删除</a>
                </td>
            </tr>
            <% })%>
    </table>
	</div>

    <!-- 分页 -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/admin/articleList">首页</a>
            </li>
            <li>
                <a href="/admin/articleList?page=<%=page-1%>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <% for(var i=1;i<= maxPage; i++){ %>
                <li>
                    <a href="/admin/articleList?page=<%=i%>"><%=i%></a>
                </li>
            <% } %>

            <li>
                <a href="/admin/articleList?page=<%=page+1%>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            <li>
                <a href="/admin/articleList?page=<%=maxPage%>">尾页</a>
            </li>
        </ul>
    </nav>
    <!-- 分页 end -->

    <% include ./footer %>